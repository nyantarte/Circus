<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/EditMethodListBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit method list" />

    <Button
        android:id="@+id/EditUsageListBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit usage list" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Period" />

        <EditText
            android:id="@+id/PayPeriod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>

    <Button
        android:id="@+id/EditMethodReportColorBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EDIT METHOD REPORT COLOR" />

    <Button
        android:id="@+id/EditMethodReportFlag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EDIT METHOD REPORT FLAG" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />

    <Button
        android:id="@+id/EditUsageReportFlagBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Usage Report Flag" />

    <Button
        android:id="@+id/EditUsageColorBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EDIT USAGE COLOR " />
</LinearLayout>